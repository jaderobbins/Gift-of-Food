<%=form_for(@volunteer) do  |v| %>
  <div class="span-12">
    <div><%=v.label :first_name, "First Name" %><%=v.text_field :first_name %></div>
    <div><%=v.label :last_name, "Last Name" %><%=v.text_field :last_name %></div>
    <div><%=v.label :email %><%=v.email_field :email %></div>
    <div><%=v.label :telephone, "Phone" %><%=v.telephone_field :phone %></div>
    <div class="mobile_check"><%=v.check_box :is_mobile %><%=v.label :is_mobile,"Is this a mobile number?" %></div>
    <div><%=v.label :zip %><%=v.number_field :zip %></div>
  </div>

  <div class="span-12 last">
    <div class="team_lead_check"><%=v.check_box :is_team_lead %><%=v.label :is_team_lead, "I would like to be a Team Lead" %></div>
    <div class="neighborhood_selector">
      <div><%=v.label :neighborhood_id, "Available Neighborhoods:" %></div>
      <div><%=v.select :neighborhood_id, Neighborhood.all.collect {|p| [ p.name, p.id ] }, { :include_blank => true } %></div>
    </div>
  </div>

  <div class="prepend-9 span-6 append-9">
    <div><%=v.submit "Volunteer!" %></div>
  </div>
<% end %>
