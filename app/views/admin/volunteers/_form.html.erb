<%=form_for @volunteer, :url => admin_volunteer_path do |v| %>
  <div><%=v.label :first_name %><%=v.text_field :first_name %></div>
  <div><%=v.label :last_name %><%=v.text_field :last_name %></div>
  <div><%=v.label :email %><%=v.email_field :email %></div>
  <div><%=v.label :telephone %><%=v.telephone_field :phone %><span class="mobile_check"><%=v.check_box :is_mobile %><%=v.label :is_mobile,"Mobile?" %></span></div>
  <div><%=v.label :zip %><%=v.number_field :zip %></div>
  <div class="team_lead_check"><%=v.check_box :is_team_lead %><%=v.label :is_team_lead,"Team Lead?" %></div>
  <div class="neighborhood_selector">
    <div><%=v.label :neighborhood_id, "Neighborhoods:" %></div>
    <div><%=v.select :neighborhood_id, Neighborhood.all.collect {|p| [ p.name, p.id ] }, { :include_blank => true } %></div>
  </div>
  <div><%=v.submit "Save" %></div>
<% end %>
